@page
@model BaDongTourismWebsite.Pages.Admin.Destinations.DeleteModel
@{
    ViewData["Title"] = "Xóa Điểm Du Lịch";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

@if (Model.Destination == null)
{
    <div class="admin-page">
        <section class="admin-page-header">
            <div class="admin-page-heading">
                <span class="admin-page-subtitle">Lỗi</span>
                <h2 class="admin-page-title">Không tìm thấy dữ liệu</h2>
            </div>
        </section>
        <div class="admin-card">
            <div class="admin-empty-state">
                <i class="fas fa-exclamation-circle fa-2x"></i>
                <p>Không tìm thấy điểm du lịch này.</p>
                <div class="admin-form-actions justify-content-center">
                    <a asp-page="/Admin/Destinations/Index" class="btn btn-admin-primary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    var destination = Model.Destination!;

    <div class="admin-page">
        <section class="admin-page-header">
            <div class="admin-page-heading">
                <span class="admin-page-subtitle">Xác nhận</span>
                <h2 class="admin-page-title">Xóa điểm du lịch</h2>
            </div>
            <div class="admin-page-actions">
                <a asp-page="/Admin/Destinations/Index" class="btn btn-admin-ghost">
                    <i class="fas fa-arrow-left me-2"></i>Danh sách
                </a>
            </div>
        </section>

        <div class="admin-card">
            <div class="alert alert-warning admin-alert admin-alert--warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa điểm du lịch này không? Hành động này không thể hoàn tác.
            </div>

            <div class="admin-highlight-card">
                <div class="d-flex justify-content-between align-items-start flex-wrap gap-3">
                    <div>
                        <h3 class="mb-2">@destination.Name</h3>
                        <p class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>@destination.Location, @destination.Province
                        </p>
                        <p class="mb-0">@destination.ShortDescription</p>
                    </div>
                    @if (destination.IsFeatured)
                    {
                        <span class="badge-status badge-featured">Nổi bật</span>
                    }
                </div>
            </div>

            <form method="post">
                <input type="hidden" asp-for="Destination.Id" />
                <div class="admin-form-actions">
                    <a asp-page="/Admin/Destinations/Index" class="btn btn-outline-secondary">
                        <i class="fas fa-times me-2"></i>Hủy
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
}

