@page
@model BaDongTourismWebsite.Pages.Admin.Destinations.DeleteModel
@{
    ViewData["Title"] = "Xóa Điểm Du Lịch";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

@if (Model.Destination == null)
{
    <div class="admin-container">
        <div class="container">
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-circle me-2"></i>Không tìm thấy điểm du lịch này.
            </div>
            <a asp-page="/Admin/Destinations/Index" class="btn btn-primary">Quay lại</a>
        </div>
    </div>
}
else
{
    <div class="admin-container">
        <div class="container">
            <div class="admin-header">
                <h2><i class="fas fa-trash me-2"></i>Xóa Điểm Du Lịch</h2>
                <a asp-page="/Admin/Destinations/Index" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
            </div>

            <div class="admin-card">
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa điểm du lịch này không? Hành động này không thể hoàn tác.
                </div>

                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <h4>@Model.Destination.Name</h4>
                        <p class="text-muted mb-2">
                            <i class="fas fa-map-marker-alt me-2"></i>@Model.Destination.Location, @Model.Destination.Province
                        </p>
                        <p>@Model.Destination.ShortDescription</p>
                    </div>
                </div>

                <form method="post">
                    <input type="hidden" asp-for="Destination.Id" />
                    <div class="d-flex justify-content-between">
                        <a asp-page="/Admin/Destinations/Index" class="btn btn-outline-secondary">
                            <i class="fas fa-times me-2"></i>Hủy
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash me-2"></i>Xác nhận xóa
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

