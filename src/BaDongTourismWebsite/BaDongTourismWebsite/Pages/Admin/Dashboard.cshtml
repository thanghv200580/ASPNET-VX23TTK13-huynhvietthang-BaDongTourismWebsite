@page
@model BaDongTourismWebsite.Pages.Admin.DashboardModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "/Pages/Shared/_AdminLayout.cshtml";
}

<div class="admin-container">
    <div class="container">
        <div class="admin-header mb-4">
            <h2><i class="fas fa-tachometer-alt me-2"></i>Dashboard</h2>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-md-3">
                <div class="admin-card text-center">
                    <div class="mb-3">
                        <i class="fas fa-map-marked-alt fa-3x text-primary"></i>
                    </div>
                    <h3>@Model.TotalDestinations</h3>
                    <p class="text-muted mb-0">Điểm du lịch</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="admin-card text-center">
                    <div class="mb-3">
                        <i class="fas fa-route fa-3x text-primary"></i>
                    </div>
                    <h3>@Model.TotalTours</h3>
                    <p class="text-muted mb-0">Tours</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="admin-card text-center">
                    <div class="mb-3">
                        <i class="fas fa-users fa-3x text-primary"></i>
                    </div>
                    <h3>@Model.TotalUsers</h3>
                    <p class="text-muted mb-0">Người dùng</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="admin-card text-center">
                    <div class="mb-3">
                        <i class="fas fa-bookmark fa-3x text-primary"></i>
                    </div>
                    <h3>@Model.TotalBookings</h3>
                    <p class="text-muted mb-0">Đơn đặt</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="admin-card">
                    <div class="admin-header">
                        <h5>Điểm du lịch nổi bật</h5>
                        <a asp-page="/Admin/Destinations/Index" class="btn btn-sm btn-admin-primary">Xem tất cả</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Tên</th>
                                    <th>Đánh giá</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var dest in Model.FeaturedDestinations.Take(5))
                                {
                                    <tr>
                                        <td>@dest.Name</td>
                                        <td>@dest.Rating.ToString("0.0")</td>
                                        <td>
                                            @if (dest.IsActive)
                                            {
                                                <span class="badge-status badge-active">Hoạt động</span>
                                            }
                                            else
                                            {
                                                <span class="badge-status badge-inactive">Không hoạt động</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="admin-card">
                    <div class="admin-header">
                        <h5>Hành động nhanh</h5>
                    </div>
                    <div class="d-grid gap-2">
                        <a asp-page="/Admin/Destinations/Create" class="btn btn-admin-primary">
                            <i class="fas fa-plus me-2"></i>Thêm điểm du lịch mới
                        </a>
                        <a asp-page="/Admin/Destinations/Index" class="btn btn-outline-primary">
                            <i class="fas fa-list me-2"></i>Quản lý điểm du lịch
                        </a>
                        <a asp-page="/Admin/Tours/Index" class="btn btn-outline-primary">
                            <i class="fas fa-route me-2"></i>Quản lý Tours
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

