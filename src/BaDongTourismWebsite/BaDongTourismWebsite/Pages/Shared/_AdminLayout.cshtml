@using Microsoft.AspNetCore.Mvc.RazorPages
@using Microsoft.AspNetCore.Http
@{
    var descriptor = ViewContext.ActionDescriptor as Microsoft.AspNetCore.Mvc.RazorPages.CompiledPageActionDescriptor;
    var currentPage = descriptor?.RelativePath ?? string.Empty;
    var userName = Context.Session.GetString("UserName") ?? "Quản trị viên";
    var userEmail = Context.Session.GetString("UserEmail") ?? string.Empty;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Admin - Du Lịch Ba Đồng</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true"/>
</head>
<body class="admin-body">
<div class="admin-shell">
    <aside class="admin-sidebar">
        <div class="admin-brand">
            <a asp-page="/Admin/Dashboard" class="admin-brand-link">
                <span class="admin-brand-icon"><i class="fas fa-compass"></i></span>
                <span class="admin-brand-text">
                    <strong>Ba Đồng</strong>
                    <small>Bảng quản trị</small>
                </span>
            </a>
        </div>

        <nav class="admin-nav">
            <a asp-page="/Admin/Dashboard"
               class="admin-nav-link @(string.Equals(currentPage, "/Pages/Admin/Dashboard.cshtml", StringComparison.OrdinalIgnoreCase) ? "active" : string.Empty)">
                <span class="admin-nav-icon"><i class="fas fa-gauge"></i></span>
                <span>Dashboard</span>
            </a>
            <a asp-page="/Admin/Destinations/Index"
               class="admin-nav-link @(currentPage?.Contains("/Pages/Admin/Destinations", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)">
                <span class="admin-nav-icon"><i class="fas fa-map-location"></i></span>
                <span>Điểm du lịch</span>
            </a>
            <a asp-page="/Admin/Tours/Index"
               class="admin-nav-link @(currentPage?.Contains("/Pages/Admin/Tours", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)">
                <span class="admin-nav-icon"><i class="fas fa-route"></i></span>
                <span>Tours</span>
            </a>
            <a asp-page="/Admin/Bookings/Index"
               class="admin-nav-link @(currentPage?.Contains("/Pages/Admin/Bookings", StringComparison.OrdinalIgnoreCase) == true ? "active" : string.Empty)">
                <span class="admin-nav-icon"><i class="fas fa-calendar-check"></i></span>
                <span>Đơn đặt tour</span>
            </a>
        </nav>

        <div class="admin-sidebar-footer">
            <a asp-page="/Index" class="admin-nav-link admin-nav-link--compact">
                <span class="admin-nav-icon"><i class="fas fa-house"></i></span>
                <span>Về trang chủ</span>
            </a>
            <a asp-page="/Auth/Logout" class="admin-nav-link admin-nav-link--compact">
                <span class="admin-nav-icon"><i class="fas fa-sign-out-alt"></i></span>
                <span>Đăng xuất</span>
            </a>
        </div>
    </aside>

    <div class="admin-main">
        <header class="admin-topbar">
            <div class="admin-topbar-title">
                <h1>@ViewData["Title"]</h1>
                <p>Quản lý và theo dõi hệ thống du lịch Ba Đồng.</p>
            </div>
            <div class="admin-topbar-user">
                <div class="admin-user-avatar">
                    <span>@(userName.Length > 0 ? userName.Substring(0,1).ToUpperInvariant() : "A")</span>
                </div>
                <div class="admin-user-meta">
                    <strong>@userName</strong>
                    @if (!string.IsNullOrEmpty(userEmail))
                    {
                        <span>@userEmail</span>
                    }
                </div>
            </div>
        </header>

        <main class="admin-content">
            @RenderBody()
        </main>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>

