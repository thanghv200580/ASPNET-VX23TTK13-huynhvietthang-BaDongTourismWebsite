@page
@model BaDongTourismWebsite.Pages.Destinations.DetailsModel
@{
    ViewData["Title"] = Model.Destination?.Name ?? "Chi tiết điểm du lịch";
}

@if (Model.Destination == null)
{
    <div class="container py-5">
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2"></i>Không tìm thấy điểm du lịch này.
        </div>
        <a asp-page="/Destinations/Index" class="btn btn-primary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
        </a>
    </div>
}
else
{
    <div class="container py-5" style="min-height: calc(100vh - 500px);">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-page="/Index">Trang chủ</a></li>
                <li class="breadcrumb-item"><a asp-page="/Destinations/Index">Điểm du lịch</a></li>
                <li class="breadcrumb-item active">@Model.Destination.Name</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4 border-0 shadow-sm">
                    @if (!string.IsNullOrEmpty(Model.Destination.MainImage))
                    {
                        <img src="@Model.Destination.MainImage" class="card-img-top" alt="@Model.Destination.Name" style="height: 400px; object-fit: cover;">
                    }
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <div>
                                <h1 class="mb-2">@Model.Destination.Name</h1>
                                <p class="text-muted mb-2">
                                    <i class="fas fa-map-marker-alt me-2"></i>@Model.Destination.Location, @Model.Destination.Province
                                </p>
                                <div class="d-flex align-items-center gap-3">
                                    <span class="destination-rating">
                                        <i class="fas fa-star text-warning"></i> @Model.Destination.Rating.ToString("0.0")
                                    </span>
                                    <span class="text-muted">
                                        <i class="fas fa-eye me-1"></i>@Model.Destination.ViewCount lượt xem
                                    </span>
                                    @if (Model.Destination.IsFeatured)
                                    {
                                        <span class="badge bg-warning text-dark">Nổi bật</span>
                                    }
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="mb-4">
                            <h3 class="mb-3">Mô tả</h3>
                            <p class="text-justify" style="line-height: 1.8;">@Model.Destination.Description</p>
                        </div>

                        @if (Model.Destination.Images != null && Model.Destination.Images.Any())
                        {
                            <div class="mb-4">
                                <h3 class="mb-3">Hình ảnh</h3>
                                <div class="row g-3">
                                    @foreach (var image in Model.Destination.Images.Take(6))
                                    {
                                        <div class="col-md-4">
                                            <img src="@image.ImageUrl" class="img-fluid rounded" alt="@Model.Destination.Name" style="height: 200px; width: 100%; object-fit: cover;">
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        @if (Model.Destination.Reviews != null && Model.Destination.Reviews.Any())
                        {
                            <div class="mb-4">
                                <h3 class="mb-3">Đánh giá</h3>
                                @foreach (var review in Model.Destination.Reviews.Take(5))
                                {
                                    <div class="card mb-3 border-0 shadow-sm">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between mb-2">
                                                <strong>@review.User?.FullName</strong>
                                                <span class="text-warning">
                                                    @for (int i = 0; i < review.Rating; i++)
                                                    {
                                                        <i class="fas fa-star"></i>
                                                    }
                                                </span>
                                            </div>
                                            <p class="mb-0">@review.Content</p>
                                            <small class="text-muted">@review.CreatedDate.ToString("dd/MM/yyyy")</small>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-0 shadow-sm" style="position: sticky; top: 100px;">
                    <div class="card-body p-4">
                        <h5 class="mb-3">Thông tin</h5>
                        <ul class="list-unstyled">
                            <li class="mb-3">
                                <i class="fas fa-tag me-2 text-primary"></i>
                                <strong>Loại:</strong> @Model.Destination.Category?.Name
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                <strong>Địa điểm:</strong> @Model.Destination.Location
                            </li>
                            <li class="mb-3">
                                <i class="fas fa-star me-2 text-primary"></i>
                                <strong>Đánh giá:</strong> @Model.Destination.Rating.ToString("0.0") / 5.0
                            </li>
                        </ul>
                        <a asp-page="/Tours/Index" class="btn btn-primary w-100 mb-2">
                            <i class="fas fa-route me-2"></i>Xem Tours liên quan
                        </a>
                        <a asp-page="/Destinations/Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

