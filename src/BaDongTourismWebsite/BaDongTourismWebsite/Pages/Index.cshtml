@page
@model IndexModel
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-overlay"></div>
    <div class="container hero-content">
        <div class="row">
            <div class="col-lg-8 mx-auto text-center">
                <h1 class="hero-title">Khám Phá Vẻ Đẹp Ba Đồng</h1>
                <p class="hero-subtitle">Trải nghiệm những điểm đến tuyệt vời, văn hóa độc đáo và thiên nhiên hoang sơ</p>
                <div class="hero-search">
                    <form class="d-flex">
                        <input class="form-control form-control-lg me-2" type="search" placeholder="Tìm kiếm điểm đến..." aria-label="Search">
                        <button class="btn btn-primary-custom btn-lg" type="submit">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-3 col-sm-6 service-item text-center">
                <div class="service-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h5>Điểm Du lịch</h5>
                <p>Khám phá các địa điểm đẹp nhất</p>
            </div>
            <div class="col-md-3 col-sm-6 service-item text-center">
                <div class="service-icon">
                    <i class="fas fa-route"></i>
                </div>
                <h5>Tours Đa dạng</h5>
                <p>Lựa chọn tour phù hợp</p>
            </div>
            <div class="col-md-3 col-sm-6 service-item text-center">
                <div class="service-icon">
                    <i class="fas fa-hotel"></i>
                </div>
                <h5>Lưu trú</h5>
                <p>Khách sạn, homestay chất lượng</p>
            </div>
            <div class="col-md-3 col-sm-6 service-item text-center">
                <div class="service-icon">
                    <i class="fas fa-utensils"></i>
                </div>
                <h5>Ẩm thực</h5>
                <p>Thưởng thức đặc sản địa phương</p>
            </div>
        </div>
    </div>
</section>

<!-- Featured Destinations -->
<section class="py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Điểm Đến Nổi Bật</h2>
            <p class="section-subtitle">Khám phá những địa điểm du lịch tuyệt vời tại Ba Đồng</p>
        </div>
        <div class="row g-4">
            @if (Model.FeaturedDestinations.Any())
            {
                @foreach (var destination in Model.FeaturedDestinations)
                {
                    <div class="col-lg-4 col-md-6">
                        <div class="card destination-card">
                            <div class="position-relative">
                                <img src="@(destination.MainImage ?? "/images/placeholder-destination.jpg")" 
                                     class="destination-image" 
                                     alt="@destination.Name">
                                <span class="badge-category">@destination.Category.Name</span>
                            </div>
                            <div class="card-body">
                                <h5 class="destination-title">@destination.Name</h5>
                                <p class="destination-location">
                                    <i class="fas fa-map-marker-alt me-1"></i>@destination.Location, @destination.Province
                                </p>
                                <p class="card-text">@destination.ShortDescription</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="destination-rating">
                                        <i class="fas fa-star"></i> @destination.Rating.ToString("0.0")
                                    </span>
                                    <a asp-page="/Destinations/Details" asp-route-id="@destination.Id" class="btn btn-outline-custom btn-sm">
                                        Xem chi tiết <i class="fas fa-arrow-right ms-1"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Chưa có điểm đến nào được thêm vào.</p>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-page="/Destinations/Index" class="btn btn-primary-custom">
                Xem tất cả <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- Popular Tours -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">Tours Phổ Biến</h2>
            <p class="section-subtitle">Những chương trình tour được yêu thích nhất</p>
        </div>
        <div class="row g-4">
            @if (Model.PopularTours.Any())
            {
                @foreach (var tour in Model.PopularTours)
                {
                    <div class="col-lg-3 col-md-6">
                        <div class="card tour-card">
                            <img src="@(tour.MainImage ?? "/images/placeholder-tour.jpg")" 
                                 class="tour-image" 
                                 alt="@tour.Name">
                            <div class="card-body">
                                <h5 class="card-title">@tour.Name</h5>
                                <p class="tour-duration">
                                    <i class="fas fa-clock me-1"></i>@tour.Duration ngày
                                </p>
                                <p class="card-text small">@tour.ShortDescription</p>
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="tour-price">@tour.Price.ToString("N0")đ</span>
                                    <a asp-page="/Tours/Details" asp-route-id="@tour.Id" class="btn btn-primary-custom btn-sm">
                                        Đặt ngay
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center">
                    <p class="text-muted">Chưa có tour nào được thêm vào.</p>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a asp-page="/Tours/Index" class="btn btn-primary-custom">
                Xem tất cả tours <i class="fas fa-arrow-right ms-2"></i>
            </a>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="py-5 cta-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8 text-white">
                <h3 class="mb-3">Bạn cần tư vấn về chuyến du lịch?</h3>
                <p class="mb-0">Liên hệ với chúng tôi để nhận được những gợi ý tốt nhất cho chuyến đi của bạn</p>
            </div>
            <div class="col-lg-4 text-end">
                <a asp-page="/Contact" class="btn btn-light btn-lg">
                    <i class="fas fa-phone me-2"></i>Liên hệ ngay
                </a>
            </div>
        </div>
    </div>
</section>